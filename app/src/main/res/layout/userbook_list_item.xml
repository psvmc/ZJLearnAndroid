<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/firstCharLayout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:clickable="false"
        android:background="@color/zj_gay_background">

        <TextView
            android:id="@+id/firstCharTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/zj_gay_middle"
            android:layout_marginLeft="20dp"
            android:text="Z"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/recycler_item_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/touxiang002" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="剑行者" />
    </LinearLayout>
</LinearLayout>